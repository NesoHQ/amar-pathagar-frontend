FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server using the local next installation
CMD ["./node_modules/.bin/next", "dev", "-H", "0.0.0.0", "-p", "3000"]
